		"react-helmet": "^6.1.0",
		"react-redux": "^7.2.2",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.1",
		"react-toastify": "^6.2.0",
		"react-transition-group": "^4.4.1",
		"redux": "^4.0.5",
		"typescript": "^3.9.7",
		"use-debouncy": "3.0.1"
	},
	"devDependencies": {
		"@craco/craco": "^6.0.0",
		"@fullhuman/postcss-purgecss": "^3.1.3",
		"@types/node": "^14.14.13",
		"@types/react": "16.9.49",
