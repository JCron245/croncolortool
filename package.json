		"@types/webpack-env": "^1.16.0",
		"eslint": "^7.16.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.6",
		"lint-staged": "^10.5.3",
		"node-sass": "^4.14.1",
		"prettier": "^2.2.1",
		"redux-devtools-extension": "^2.13.8"
	},
	"scripts": {
		"start": "craco start",
		"build": "craco build",
		"eject": "craco eject",
		"lint": "eslint ./src --ext .ts,.tsx",
		"prettier": "prettier \"**/*.{json,md,scss,ts,tsx}\" --write"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">1.25%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && lint-staged",
			"pre-push": "npm run build"
		}
	},
	"lint-staged": {
		"src/**/*.{js.jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 2,
		"singleQuote": true,
		"jsxBracketSameLine": true,
		"printWidth": 140
	}
}
